// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        Int       @id @default(autoincrement())
  planId    Int?      @map("plan_id") // * = nullable in your diagram
  name      String    @db.VarChar(255)
  slug      String    @db.VarChar(255)
  logoUrl   String    @map("logo_url") @db.VarChar(255)
  isActive  Boolean   @default(true) @map("is_active")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at") // * = nullable

  products Product[]

  @@map("tenants")
}

model Product {
  id           Int       @id @default(autoincrement())
  tenantId     Int       @map("tenant_id")
  name         String    @db.VarChar(255)
  category     String    @db.VarChar(255)
  vehicleKind  String?   @map("vehicle_kind") @db.VarChar(255) // * = nullable
  mainCoverage String?   @map("main_coverage") @db.VarChar(255) // * = nullable
  slug         String    @db.VarChar(255)
  isActive     Boolean   @default(true) @map("is_active")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")
  deletedAt    DateTime? @map("deleted_at") // * = nullable

  tenant           Tenant            @relation(fields: [tenantId], references: [id])
  productDocuments ProductDocument[]

  @@map("products")
}

model ProductDocument {
  id        Int       @id @default(autoincrement())
  productId Int       @map("product_id")
  title     String    @db.VarChar(255)
  type      String    @db.VarChar(255)
  url       String    @db.VarChar(255)
  version   String?   @db.VarChar(50) // * = nullable
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at") // * = nullable

  product Product @relation(fields: [productId], references: [id])

  @@map("product_documents")
}